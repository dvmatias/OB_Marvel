<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmdv.obmarvel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OBMarvel">

        <activity
            android:name="com.cmdv.ph_home.HomeActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.cmdv.ph_character_details.CharacterDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.CharacterDetailsActivity"/>

        <activity android:name="com.cmdv.ph_search_character.ui.SearchCharacterActivity"
            android:exported="false"
            android:theme="@style/Theme.CharacterDetailsActivity"/>
    </application>

</manifest>