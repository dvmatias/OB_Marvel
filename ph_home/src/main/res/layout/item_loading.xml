<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="character"
            type="com.cmdv.domain.models.CharacterModel" />
    </data>

    <FrameLayout
        android:id="@+id/frameLoading"
        android:layout_width="match_parent"
        android:layout_height="96dp">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/loading_characters_adapter_size"
            android:layout_height="@dimen/loading_characters_adapter_size"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/layer_list_characters_adapter_loading" />
    </FrameLayout>
</layout>